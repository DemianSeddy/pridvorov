package menu;

import java.awt.BorderLayout;

import javax.swing.JFrame;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.WindowConstants;

public class menu extends JFrame {


   menu() {
	 //Определяем фрейм окна
	 super("Основное окно");
     setSize(240, 500);
     setResizable(false);
 
     setLayout(new BorderLayout());
     setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
     //Создаем основное меню
     JMenuBar menuBar = new JMenuBar();//Создали панель меню 
     JMenu menu1 = new JMenu("Файл");//Создали пункт меню 1
     JMenu menu2 = new JMenu("Редактировать");//Создали пункт меню 2
     JMenu menu3 = new JMenu("Выход");//Создали пункт меню 3
     
     menuBar.add(menu1,menu2);//Прибили к панели пункт меню
     setJMenuBar(menuBar);//Прибили у фрейму панель меню
     
   
     setVisible(true);

	}
	
	public static void main(String[] args) {
		new menu();
	}

}
